{
  "manifest_version": 3,
  "name": "Grok Favorites Downloader",
  "description": "Bulk download images and videos from your Grok Imagine favorites page.",
  "version": "0.3.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Grok Downloader",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["downloads", "scripting", "tabs"],
  "host_permissions": [
    "https://grok.com/imagine/*",
    "https://imagine-public.x.ai/*",
    "https://assets.grok.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://grok.com/imagine/*"],
      "js": ["panel.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ]
}
